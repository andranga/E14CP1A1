<p id="notice"><%= notice %></p>

<h1>Categories Index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%= button_to 'Edit', edit_category_path(category), class: "btn-primary" %></td>
        <td><%= button_to 'Destroy', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-primary" %></td>
      </tr>
    <% end %>
    <tr>
      <td><h4>No. Productos:</h4></td>
      <td><%= @count %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
